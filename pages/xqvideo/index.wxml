<view>
  <view class="video_box">
    <video controls="{{ playState ? true : false }}" enable-progress-gesture="{{ playState ? true : false }}" id="myVideo" src="{{ videoUrl }}" autoplay bindtimeupdate="timeupdate">
    </video>
    <view wx:if="{{ !playState }}" class="paytoast">
      <view>
        <view>2分钟 试看结束</view>
        <view>购买后观看全片</view>
      </view>
    </view>
  </view>
  <view class="er">{{ content.title }}</view>
  <!-- <view class="yi">
    <view class="left">
      <image src="https://pic.qqtn.com/up/2019-11/2019110408121188043.jpg"></image>
      <text>用户昵称</text>
    </view>
    <view class="right">
      <view>4355播放</view>
    </view>
  </view> -->
  <view class="san">
    <rich-text nodes="{{(content.isCharge === 0 || is_buy==1) ? content.content : content.contentFree}}"></rich-text>
  </view>
  <view class="wu" wx:if="{{ recommend.length > 0 }}">
    <view class="title">相关推荐</view>
    <common-list id="commonList" prop-type="recommend" prop-data="{{ recommend }}" />
  </view>
  <view class="si">
    <view class="left">
      <view wx:if="{{ like }}" bindtap="golike">
        <image src="../../assets/hearted.png"></image>
        <text>已收藏</text>
      </view>
      <view wx:else bindtap="golike">
        <image src="../../assets/heart.png"></image>
        <text>收藏</text>
      </view>
      <view bindtap="fenxiang">
        <image src="../../assets/分享.png"></image>
        <button open-type="share" type="text">分享</button>
      </view>
    </view>
    <view wx:if="{{content.isCharge === 1 && is_buy===0}}" bindtap="buy" class="right" style="background: #FCE718">{{ content.price + " 购买" }}</view>
  </view>
</view>