<view>
  <view class="video_box">
    <video 
      controls="{{ playState ? true : false }}" 
      enable-progress-gesture="{{ playState ? true : false }}" 
      id="myVideo" 
      src="{{ videoURL }}" 
      autoplay 
      bindtimeupdate="timeupdate">
    </video>
    <view wx:if="{{ !playState }}" class="paytoast">
      <view>
        <view>2分钟 试看结束</view>
        <view>购买后观看全片</view>
      </view>
    </view>
  </view>
  <view class="er">{{ content.title }}</view>
  <view class="yi">
    <view class="left">
      <image src="https://pic.qqtn.com/up/2019-11/2019110408121188043.jpg"></image>
      <text>用户昵称</text>
    </view>
    <view class="right">
      <view>4355播放</view>
    </view>
  </view>
  <view class="san">
    <rich-text nodes="{{content.content}}" bindtap="tap"></rich-text>
  </view>
  <view class="wu">
    <view class="title">相关推荐</view>
    <common-list id="commonList" prop-param="{{ listParam }}"/>
  </view>
  <view class="si">
    <view class="left">
      <image src="../../assets/hearted.png"></image>
      <text>已收藏</text>
    </view>
    <view class="right" style="background: {{ content.isSalea === 1 ? '#666666' : '#FCE718'}}">{{ content.isSalea === 1 ? "已购买" : "¥"+content.price + " 购买"}}</view>
  </view>
</view>