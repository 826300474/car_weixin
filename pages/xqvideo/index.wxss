.yi,.er,.san{
  background: #fff;
}
.yi{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  align-items: center;
}
.yi .left{
  display: flex;
  align-items: center;
}
.yi .right{
  font-size: 12px;
  color: #666666;
}
.yi .left image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.er{
  padding: 20rpx;
  font-size: 20px;
}
.si{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  justify-content: space-between;
  line-height: 44px;
  border-top: 1px #f2f2f2 solid; 
  background: #fff;
  font-size: 16px;
}
.si .left{
  width: 285rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.si .left image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 23rpx;
}
.si .left text{
  font-size: 16px;
}
.si .right{
  width: 465rpx;
  text-align: center;
}
.video_box{
  position: relative;
}
.paytoast{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}
.paytoast >view{
  font-size: 12px;
  background: rgba(255,255,255,0.8);
  padding: 20rpx;
  border-radius: 10rpx;
  color: #666666;
}
video{
  width: 100%;
  display: block; 
}
.san{
  padding: 20rpx;
}
.wu{
  padding-bottom: 44px;
}
.wu .title{
  padding: 20rpx;
  font-size: 18px;
  background: #fff;
}