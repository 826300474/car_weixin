.si{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  justify-content: space-between;
  line-height: 44px;
  border-top: 1px #D9D9D9 solid; 
}
.si .left{
  width: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
}
