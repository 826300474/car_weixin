<view>
  <form bindsubmit="formSubmit">
    <view class="title">
      <text>地区/行业</text>
    </view>
    <view class="item">
      <view class="li">
        <view>
          <text>地区</text>
        </view>
        <view>
          <picker name="diqu" mode="region" bindchange="bindRegionChange">
            <view class="picker" wx:if="{{  region.length > 0}}">
              {{region[0]}}-{{region[1]}}-{{region[2]}}</view>
            <view class="picker" wx:else>请选择地区</view>
          </picker>
        </view>
      </view>
      <view class="li">
        <view>
          <text>行业</text>
        </view>
        <view>
          <picker name="hangye" bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
            <view class="picker" wx:if="{{ index }}">{{array[index]}}</view>
            <text wx:else>请选择行业</text>
          </picker>
        </view>
      </view>
    </view>
    <view class="title" style="margin-top:10px;">
      <text>门店认证</text>
    </view>
    <view class="item">
      <view class="li">
        <view>
          <text>门店名称</text>
        </view>
        <view>
          <input name="input" placeholder="请输入您的店名" maxlength="20"></input>
        </view>
      </view>
      <view class="li">
        <view>
          <text>营业证明</text>
        </view>
        <view>
          <view class="photoBox">
            <view>
              <mp-uploader ext-class="uploader" bindfail="uploadError" bindsuccess="uploadSuccess" select="{{selectFile}}" upload="{{uplaodFile}}" files="{{files}}" max-count="2" tips="上传">
              </mp-uploader>
            </view>
          </view>
          <text style="font-size:12px;">请上传门店照片或营业执照</text>
        </view>
      </view>
    </view>
    <view class="btn_box">
      <button formType="submit" type="def" loading="{{ loading }}">提交申请</button>
    </view>
  </form>
</view>