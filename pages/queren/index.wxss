.item{
  padding: 25rpx 20rpx;
  background: #fff;
  border-bottom: solid 1px #e5e5e5;
  border-top: solid 1px #e5e5e5;
}
.yi{
  border-top: none;
  display: flex;
  align-items: center;
  min-height: 150rpx;
  position: relative;
  padding-right: 50rpx;
}
.yi image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.yi .back{
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
}

text{
  font-size: 30rpx;
}
.yi view:last-child{
  color: #666666;
}
.er{
  display: flex;
  margin-top: 20rpx;
}
.er image{
  width: 160rpx;
  height: 160rpx;
  display: block;
}
.er .right{
  padding: 10rpx 0;
  flex-grow: 1;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.er .right view:first-child{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
}
.er .right view:last-child{
  display: flex;
  justify-content: space-between;
}
.er .right view:last-child text{
  color: #666666;
}
.san{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.bottom_box{
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
  width: 710rpx;
}