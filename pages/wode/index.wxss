.yi{
  background: #FCD055;
  padding: 69rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 50rpx;
}
.yi .box{
  display: flex;
  align-items: center;
}
.yi .toux{
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
  margin-right: 28rpx;
  background: #f2f2f2;
}
.yi text{
  font-size: 18px;
}
.yi .qiandao{
  font-size: 12px;
  padding:0 20rpx;
  border:solid 1px #848484;
  border-radius: 10rpx;
  color: #666666;
}
.yi button{
  line-height: 36px;
}
.yi .xinxi{
  display: flex;
  flex-direction: column; 
  justify-content: flex-start;
  align-items:flex-start;
}
.work{
  text-align: center;
  font-size: 26rpx;
  margin-top: 20rpx;
  color: #D9D9D9;
}