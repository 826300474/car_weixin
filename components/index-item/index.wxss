.item{
  padding:20rpx;
  background: #fff;
  border-bottom: solid 1rpx #f2f2f2;
}
.img{
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
}
.yi .photo_box{
  display: flex;
  justify-content: space-between;
}
.yi .photo_box .photo{
  width: 230rpx;
  height: 161rpx;
}
.title{
  margin: 10rpx 0 10rpx 0;
  min-height: 44px;
}
.title text{
  font-size: 16px;
}
.er{
  display: flex;
  justify-content: space-between;
}
.er .left{
  width: 480rpx;
  padding-right: 20rpx;

}
.er .right{
  width: 230rpx;
  height: 161rpx;
}
.san .photo_box{
  width: 710rpx;
  height: 355rpx;
}
.bottom_box{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 10px;
  color: #818FA7;
  align-content: center;
  align-items: center;
  line-height: 40rpx;
}
.bottom_box view:last-child{
  background: #FCD055;
  border-radius: 20rpx;
  padding:0rpx 15rpx;
}

